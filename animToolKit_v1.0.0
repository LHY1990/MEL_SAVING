global proc animWork_v01(){
    
    //이름은 매번 바꿔서 사용할것
    
    if (`window -ex animWindowId`){
        deleteUI -window animWindowId;
    }
    
    
    window -title "AnimToolKit_v1.0.0" animWindowId;
    
    rowColumnLayout -numberOfColumns 1;
    text -label "\nAnimToolKit v 1. 0. 0\n";
    
    //버튼 시작
	rowColumnLayout -numberOfColumns 4;
	
	text -label "Translate";
	checkBox -label "X" -v 1;
	checkBox -label "Y" -v 1;
	checkBox -label "Z" -v 1;


	//
	text -label "Rotate    ";
	checkBox -label "X" -v 1;
	checkBox -label "Y" -v 1;
	checkBox -label "Z" -v 1;
	//
	
	text -label "Scale      ";
	checkBox -label "X" -v 1;
	checkBox -label "Y" -v 1;
	checkBox -label "Z" -v 1;
	//
	
	text -label "visibility";
	checkBox -label "" -v 1;
	text -l "";
	text -l "";
	rowColumnLayout -numberOfColumns 1;
	text -l "\n";
	
    //intFieldGrp -label "인티저 슬라이드"   _startFrame_id;
    button -label "임시버튼" -bgc .5 .5 .5 ;
    button -label "임시버튼" -bgc .5 .5 .5 ;
    button -label "임시버튼" -bgc .5 .5 .5 ;
    
    
    //버튼완료    
    showWindow animWindowId;
    
}

animWork_v01();
